@model AsistentZaUsteduNovca.Models.Kategorija

@{
    ViewData["PageTitle"] = Model.CategoryId == 0 ? "Kreiraj novu kategoriju" : "Uredi kategoriju";
}


<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="AddOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div><div class="mb-3">
                    <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="radioleft" name="Tip" value="Trosak" checked="@(Model.Tip=="Trosak")" />
                        <label class="e-btn" for="radioleft">Trosak</label>
                        <input type="radio" id="radiomiddle" name="Tip" value="Prihod" checked="@(Model.Tip=="Prihod")" />
                        <label class="e-btn" for="radiomiddle">Prihod</label>

                    </div>
                    
                </div>
                <div class="mb-3">
                    <ejs-textbox id="naziv" name="Naziv" placeholder="Naziv" ejs-for="Naziv" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Naziv" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="ikonica" name="Ikonica" placeholder="Ikonica" ejs-for="Ikonica" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Ikonica" class="text-danger"></span>
                </div>

                <ejs-button id="submit" type="submit" content="Potvrdi" cssClass="e-success"></ejs-button>
            </form>
        </div>

       
        
    </div> <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" >
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>

    </div>
</div>



