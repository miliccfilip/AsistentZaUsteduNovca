@{
    ViewData["isDashboard"] = true;
}


@* Summary widgets *@

<div class="row mb-4">
    <div class="col-md-4">

    <div class="d-flex flex-row widget summary income">
        <div class="d-flex flex-column justify-content-center p-5"> 

            <i class="fa-solid fa-dollar-sign fa-2xl"></i>

        </div>
        <div class="d-flex flex-column m-auto py-3 ">
            <span class="lead">Ukupan Prihod</span>
            <h1 class="display-6 fw-bold">@ViewBag.TotalIncome </h1>
        </div>
        </div>
    </div>

    <div class="col-md-4">


    <div class="d-flex flex-row widget summary income">
        <div class="d-flex flex-column justify-content-center p-5">

            <i class="fa-solid fa-dollar-sign fa-2xl"></i>

        </div>
        <div class="d-flex flex-column m-auto py-3 ">
            <span class="lead">Ukupni Troškovi</span>
            <h1 class="display-6 fw-bold">@ViewBag.TotalExpense </h1>
        </div>
    </div>
    </div>



    <div class="col-md-4">
    <div class="d-flex flex-row widget summary income">
        <div class="d-flex flex-column justify-content-center p-5">

            <i class="fa-solid fa-dollar-sign fa-2xl"></i>

        </div>
        <div class="d-flex flex-column m-auto py-3 ">
            <span class="lead">Balans</span>
            <h1 class="display-6 fw-bold">@ViewBag.Balance </h1>
        </div>
    </div>
    </div>



</div>


  @*  Doughnut and Spline Chart *@


<div class="row mb-4">

    <div class="col-md-4">
        <div class="widget chart">
            <div class="p-4">
                <h5 class="fw-bold">Grafik troškova</h5>
            </div>
            <ejs-accumulationchart id="doughnutchart" enableSmartLabels background="#1a222b">
                <e-accumulation-series-collection>
                    <e-accumulation-series dataSource="@ViewBag.DoughnutChartData"
                                             xName="CategoryTitleWithIcon" yName="iznos" innerRadius="60%" legendShape="Circle">
                        <e-accumulationseries-datalabel name="formatttedAmount" visible></e-accumulationseries-datalabel>
                                         </e-accumulation-series>
                </e-accumulation-series-collection>
               <e-accumulationchart-legendsettings position="Top" toggleVisibility="false">
                   <e-legendsettings-textstyle color="#fff" size="1rem"></e-legendsettings-textstyle>
               </e-accumulationchart-legendsettings>
               <e-accumulationchart-tooltipsettings enable></e-accumulationchart-tooltipsettings>
            </ejs-accumulationchart>
        </div>
    </div>
    <div class="col-md-8">
<div class="widget chart">
    <div class="p-4">
        <div class="p-4">
    <h5 class="fw-bold">Primanja i Troskovi</h5>
    <ejs-chart id="splineChart" background="#1a222b">
        <e-chart-primaryxaxis valueType="Category"></e-chart-primaryxaxis>
        <e-chart-primaryyaxis>
            <e-majorgridlines width="1" color="#32414d" dashArray="3, 5 "></e-majorgridlines>
        </e-chart-primaryyaxis>
        <e-series-collection>
            <e-series dataSource="@ViewBag.SplineChartData" xName="day" yName="income" name="Primanja" type="Spline"></e-series>
            <e-series dataSource="@ViewBag.SplineChartData" xName="day" yName="expense" name="Troskovi" type="Spline"></e-series>
        </e-series-collection>
    </ejs-chart>
</div>

</div>


    </div>

</div>

